body
   background-color rgb(35, 36, 47)
   color white
   margin 0
   padding 0

nav
  width 100%
  margin-top 0
  margin-left 0
  margin-right 0
  margin-bottom 20px
  padding 0
  background-color rgb(0, 11, 11)
.nav
  width 100%
  padding-top 20px
  display flex
  flex-direction row
  align-self stretch
  justify-content space-between

.nav > a
  align-self flex-start

.nav > ul
  align-self flex-end

.nav > ul > li
  display inline
  margin-right 10px

.nav > ul > li > a
  text-decoration none

.logout
  cursor pointer

.main
  margin 0 auto

fieldset
  width 80%

input, textarea, select
  width 250px
  height 50px
  margin 0
  box-sizing border-box

.validationerror
  color rgb(171, 20, 0)

input.ng-touched, input.ng-invalid
  border 2px solid rgb(171, 20, 0)

input.ng-touched, input.ng-valid
  border 2px solid rgb(0, 149, 28)

.inputs.top_field > input
  border-bottom-left-radius 0
  border-bottom-right-radius 0

.inputs.bottom_field > input
  border-top-left-radius 0
  border-top-right-radius 0

.inputs.middle_field > input
  border-radius 0

textarea
  vertical-align top

button
  margin 5px
  box-sizing border-box

form
  position relative
  width 740px
  height 498px
  margin 0 auto
